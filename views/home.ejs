<%- include('partials/head') %>
  <body>
    <h1>Family Wordle Scoreboard</h1>

    <div class="row col-md-12">
      <h2 class="text-center">Rankings</h2>
      <ul class="text-center list-group mx-3">
        <% for (let player of players) { %>
        <li class="list-group-item">
          <%= player.name %> - Average Score: <%= player.averageScore.toFixed(2)
          %>
        </li>
        <% } %>
      </ul>
    </div>
    <div>
      <a href="/new">
        <!-- Changed button to an anchor tag with the "href" attribute -->
        <button>Add my score</button>
      </a>
      <a href="/newplayer">
        <button class="btn btn-warning">Add a new player</button>
      </a>
    </div>
  </body>
</html>
